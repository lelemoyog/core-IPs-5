{{#partial "content"}}
<h1>Add sighting!</h1>

 {{#if endangered}}
 <form action='/sightings/new' method="post" style="width:40%;" >
  <div class="form-group">
    <label for="animal">Animal species name</label>
    <input id="animal" name="animal" class="form-control" type="text">
  </div>
  <div class="form-group">
     <label for="location"> location</label>
     <input id="location" name="location" class="form-control" type="text">
   </div>
   <div class="form-group">
      <label for="ranger">ranger name</label>
      <input id="ranger" name="ranger" class="form-control" type="text">
    </div>

  <button type="submit" class="btn">Go!</button>
  </form>
    {{else}}
    <form action='/sightings/new' method="post" style="width:40%;">
     <div class="form-group">
       <label for="animal">Animal species name</label>
       <input id="animal" name="animal" class="form-control" type="text">
     </div>
     <div class="form-group">
        <label for="location"> location</label>
        <input id="location" name="location" class="form-control" type="text">
     </div>
     <div class="form-group">
         <label for="ranger">ranger name</label>
         <input id="ranger" name="ranger" class="form-control" type="text">
     </div>
        <label for="animal">Health status.</label>
     <div class="form-check ">
          <input class="form-check-input" type="radio" name="endangered" id="endangered" value="true">
          <label class="form-check-label" for="endangered">healthy</label>
     </div>
     <div class="form-check ">
          <input class="form-check-input" type="radio" name="endangered" id="endangered" value="false">
          <label class="form-check-label" for="endangered">ill</label>
     </div>
     <div class="form-check ">
           <input class="form-check-input" type="radio" name="endangered" id="endangered" value="false">
            <label class="form-check-label" for="endangered">okay</label>
     </div>
     <button type="submit" class="btn">Go!</button>
     </form>
     {{/if}}
{{/partial}}
{{> layout.hbs}}